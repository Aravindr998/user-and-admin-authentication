<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %> 
<body>
  <section>
    <%- include('./partials/admin-nav') %> 
    <section>
      <div class="container-fluid admin-section d-flex justify-content-center align-items-center">
        <div class="row w-100 justify-content-center">
          <div class="col-lg-5 col-md-6 col-sm-7">
            <div class="card rounded-4 form-card mt-5">
              <form class="p-5 row" action="/admin/adduser" method="POST" id="form">
                <div class="normal">
                  <p class="text-danger"><%= message %> </p>
                </div>
                <div class="col-6 normal">
                  <p class="text-danger" id="fname-error"></p>
                  <input type="text" name="fname" id="fname" class="col-12 admin-input" onfocusout="validateFname()">
                  <label class="pb-4 text-white" for="fname">First Name</label>
                </div>
                <div class="col-6 normal">
                  <p class="text-danger" id="lname-error"></p>
                  <input type="text" name="lname" id="lname" class="col-12 admin-input" onfocusout="validateLname()">
                  <label class="pb-4 text-white" for="lname">Last Name</label>
                </div>
                <div class="normal">
                  <p class="text-danger" id="email-error"></p>
                  <input type="text" name="email" id="email" class="col-12 admin-input" onfocusout="validateEmail()">
                  <label class="pb-4 text-white" for="email">Email Id</label>
                </div>
                <div class="normal">
                  <p class="text-danger" id="password-error"></p>
                  <input type="password" name="password" id="password" class="col-12 admin-input" onfocusout="validatePassword()">
                  <label class="pb-4 text-white" for="password">Password</label>
                </div>
                <div class="normal">
                  <p class="text-danger" id="confirm-password-error"></p>
                  <input type="confirm-password"  id="confirm-password" class="col-12 admin-input" onfocusout="confirmPassword()">
                  <label class="pb-4 text-white" for="confirm-password">Confirm Password</label>
                </div>
                <button class="btn admin-button mb-3" type="submit" onclick="validateRegister()">Add User</button>
                <a href="/admin/home" class="btn admin-button">Cancel</a>
                <div>
                </div>
              </form>
            </div>
          </div>
        </div>
     </div> 
    
    
    </section>
  </section>
  <script src="script/user-script.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script> 
</body>
</html>