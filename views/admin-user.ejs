<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %> 
<body class="">
 <section class="admin-section">
  <%- include('./partials/admin-nav') %> 
  <section class="container pt-5">
    <div class="row pt-4">
      <div class="card form-card rounded-4 col-12 p-4">
        <form action="/admin/home" method="POST" class="row" id="form">
          <div class="col-6 normal">
            <p class="text-danger" id="fname-error"></p>
            <input type="text" name="fname" id="fname" class="col-12 admin-input" value="<%= user.fname %>" onfocusout="validateFname()">
            <label class="pb-4 text-white" for="fname">First Name</label>
          </div>
          <div class="col-6 normal">
            <p class="text-danger" id="lname-error"></p>
            <input type="text" name="lname" id="lname" class="col-12 admin-input" value="<%= user.lname %>" onfocusout="validateLname()">
            <label class="pb-4 text-white" for="lname">Last Name</label>
          </div>
          <div class="normal">
            <p class="text-danger" id="email-error"></p>
            <input type="email" name="email" id="email" class="col-12 admin-input" value="<%= user.email %>" onfocusout="validateEmail()">
            <label class="pb-4 text-white" for="email">Email Id</label>
          </div>
          <div class="normal">
            <p class="text-danger" id="password-error"></p>
            <input type="password" name="password" id="password" class="col-12 admin-input" value="<%= user.password %>" onfocusout="validatePassword()">
            <label class="pb-4 text-white" for="password">Password</label>
          </div>
          <div class="normal">
            <p class="text-danger" id="confirm-password-error"></p>
            <input type="password"  id="confirm-password" class="col-12 admin-input" value="<%= user.password %>" onfocusout="confirmPassword()">
            <label class="pb-4 text-white" for="confirm-password">Confirm Password</label>
          </div>
          <button class="btn admin-button mb-3" id="change-button" onclick="sendUpdateReq();validateRegister();" data-url="<%= user._id %>">Save Changes</button>
          <button class="btn admin-button mb-3" id="delete-button" onclick ="sendDeleteReq()" data-url="<%= user._id %>">Delete User</button>
          <div>
        </form>
      </div>
    </div>
  </section>
 </section>
 <script src="/script/admin-script.js"></script>
 <script src="/script/user-script.js"></script>
  <!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
</body>
</html>