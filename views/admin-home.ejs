<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %> 
<body class="admin-body">
 <section class="admin-section">
  <%- include('./partials/admin-nav') %> 
  <section class="container pt-5">
    <div class="row pt-4">
      <% if(users.length>0){ %> 
        <% users.forEach((item)=>{ %> 
          <div class="col-md-4 ">
            <div class="card form-card rounded-4 p-4 m-2">
              <div>
                <h3><%= item.fname + " " + item.lname %> </h3>
                <p class="text-muted">User Id: <%= item._id %></p>
              </div>
              <div>
                <p><%= item.email %> </p>
              </div>
              <div class="d-flex justify-content-between">
                <!-- <button class="btn admin-button" onclick="sendUpdateReq()">Edit</button>
                <button class="btn admin-button" onclick="sendDeleteReq()">Delete</button> -->
                <a href="/admin/edit/<%= item._id %>" class="btn admin-button">Edit</a>
                <!-- <a href="/admin/delete"class="btn admin-button">Delete</a> -->
                <!-- <button class="btn admin-button" id="delete-button" onclick="sendDeleteReq()" data-url="<%= item._id %>">Delete</button> -->
              </div>
            </div>
          </div>
      <% }) %> 
      <% }else{  %> 
        <div class="col-md-12 text-center text-white pt-5, mt-5">
          <h5 class="mt-5">No Users Exist</h5>
        </div>
      <% } %>  
    </div>
  </section>
  <a href="/admin/adduser" class="btn p-3 admin-button position-fixed bottom-0 end-0 m-3">Add User</a>
 </section>
 <script src="./script/admin-script.js"></script>
  <!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
</body>
</html>